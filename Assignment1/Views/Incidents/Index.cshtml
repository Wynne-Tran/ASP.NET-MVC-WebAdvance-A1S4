
@model IEnumerable<Assignment1.Models.Incidents>
@{
    ViewData["Title"] = "Incident";
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2> Incidents Manager</h2>
        </div>

    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" table-striped style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Date Opened</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.CustomerName.Name</td>
                    <td>@obj.ProductName.Name</td>
                    <td>@obj.DayOpen</td>
                    <td class=" text-center">
                        <div>
                            <a asp-controller="Incidents" asp-route-Id="@obj.IncidentsId" asp-action="Edit" class="btn btn-primary">Edit</a>

                        </div>
                    </td>
                    <td class=" text-center">
                        <div>

                            <a asp-controller="Incidents" asp-route-Id="@obj.IncidentsId" asp-action="Delete" class="btn btn-danger ">Delete</a>

                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <div class="col-6 ">
            <a asp-controller="Incidents" asp-action="Create" class="btn btn-primary">
                Add Incident
            </a>
        </div>
    }
    else
    {
<p>No Customer Exists !</p>
    }
</div>


