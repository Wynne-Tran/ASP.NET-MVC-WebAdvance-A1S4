
@model IEnumerable<Assignment1.Models.Products>
@{
    ViewData["Title"] = "Products";
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2> Product Manager</h2>
        </div>

    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" table-striped style="width:100%">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Release Date</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Code</td>
                        <td>@obj.Name</td>
                        <td>$@obj.Price</td>
                        <td>@obj.Rdate.ToShortDateString() </td>
                        <td class=" text-center">
                            <div>
                                <a asp-controller="Products" asp-route-Id="@obj.ProductsId" asp-action="Edit" class="btn btn-primary">Edit</a>

                            </div>
                        </td>
                        <td class=" text-center">
                            <div>

                                <a asp-controller="Products" asp-route-Id="@obj.ProductsId" asp-action="Delete" class="btn btn-danger ">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-6 ">
            <a asp-controller="Products" asp-action="Create" class="btn btn-primary">
                Add Product
            </a>
        </div>
    }
    else
    {
        <p>No Products Exists !</p>
    }
</div>


