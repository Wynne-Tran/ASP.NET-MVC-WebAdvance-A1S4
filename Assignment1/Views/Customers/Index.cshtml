
@model IEnumerable<Assignment1.Models.Customers>
@{
    ViewData["Title"] = "Customer";
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2> Customer Manager</h2>
        </div>

    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" table-striped style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>City</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.FirstName @obj.LastName</td>
                        <td>@obj.Email</td>
                        <td>@obj.City</td>
                        <td class=" text-center">
                            <div>
                                <a asp-controller="Customers" asp-route-Id="@obj.CustomersId" asp-action="Edit" class="btn btn-primary">Edit</a>

                            </div>
                        </td>
                        <td class=" text-center">
                            <div>

                                <a asp-controller="Customers" asp-route-Id="@obj.CustomersId" asp-action="Delete" class="btn btn-danger ">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-6 ">
            <a asp-controller="Customers" asp-action="Create" class="btn btn-primary">
                Add Customer
            </a>
        </div>
    }
    else
    {
<p>No Customer Exists !</p>
    }
</div>


