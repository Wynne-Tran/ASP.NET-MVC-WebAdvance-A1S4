
@model IEnumerable<Assignment1.Models.Technicians>
@{
    ViewData["Title"] = "Technicuans";
}
<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h2> Technician Manager</h2>
        </div>

    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" table-striped style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.Email</td>
                        <td>@string.Format("{0}-{1}-{2}", obj.Phone.Substring(0, 3), obj.Phone.Substring(3, 3), obj.Phone.Substring(6, 4))</td>
                        <td class=" text-center">
                            <div>
                                <a asp-controller="Technicians" asp-route-Id="@obj.TechniciansId" asp-action="Edit" class="btn btn-primary">Edit</a>

                            </div>
                        </td>
                        <td class=" text-center">
                            <div>

                                <a asp-controller="Technicians" asp-route-Id="@obj.TechniciansId" asp-action="Delete" class="btn btn-danger ">Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-6 ">
            <a asp-controller="Technicians" asp-action="Create" class="btn btn-primary">
                Add Technician
            </a>
        </div>
    }
    else
    {
        <p>No Technician Exists !</p>
    }
</div>


